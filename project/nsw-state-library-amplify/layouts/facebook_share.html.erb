<!-- This page is not for humans, it's for Facebook when scraping the site for Open Graph data. -->
<!-- If you *are* are human, you should be redirected to the public page. -->

<!DOCTYPE html>
<html>
  <head>
    <meta charset='UTF-8'>
    <title>Facebook Scraper - <%= @transcript.uid %></title>

    <!-- Facebook Share button meta tags. -->
    <meta property='og:type' content='website' />
    <meta property='og:title' content='<%= @transcript.title %>' />
    <meta property='og:description' content='<%= strip_tags @transcript.description %>' />
    <meta property='og:url' content='<%= transcript_url(@transcript.uid) %>' />
    <meta property='og:image' content='<%= @transcript.image_url %>' />
    <meta property='og:image:width' content='1400' />
    <meta property='og:image:height' content='1063' />

    <!-- Send human users to the real page. -->
    <meta http-equiv='refresh' content='0;url=<%= transcript_url(@transcript.uid) %>'>
  </head>
  <body>
  </body>
</html>
