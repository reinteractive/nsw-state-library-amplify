<% content_for :javascripts do %>
  <%= javascript_include_tag 'summary' %>
<% end %>
<%= render partial: 'layouts/admin_side_pane' %>
<h3>Summary of Completion percentages</h3>
<div class="card">
  <div class="card-header">
    <p>Institution:
    <%= collection_select(:institution, :id, @institutions,
                          :id, :name,
                          include_blank: 'Select an institution') %>
    </p>
    <span id="collection">
      <p>Collection:
      <%= select_tag "collection_select", options_from_collection_for_select(@collection, "id", "title"),
                     include_blank: 'Select a collection'
      %>
      </p>
    </span>
  </div>
  <div class="card-body" id="summary-stats">
    <%= render "summary_stats", stats: @stats %>
  </div>
</div>
